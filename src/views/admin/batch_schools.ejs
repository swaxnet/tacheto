<section class="card">
	<div class="card-header">
		<h1>Matokeo ya Shule - <%= batch.title %></h1>
		<form class="inline" method="post" action="/admin/batches/<%= batch.id %>/schools" enctype="multipart/form-data">
			<select name="school_id" required>
				<option value="">Chagua Shule</option>
				<% (schools || []).forEach(s => { %>
					<option value="<%= s.id %>"><%= s.name %></option>
				<% }) %>
			</select>
			<input type="file" name="schoolPdf" accept="application/pdf" required />
			<button class="btn" type="submit">Ongeza PDF</button>
		</form>
	</div>
	<div class="table-responsive">
		<table>
			<thead><tr><th>Shule</th><th>PDF</th><th>Hatua</th></tr></thead>
			<tbody>
				<% if (!uploads || uploads.length === 0) { %>
					<tr><td colspan="3">Hakuna PDF za shule.</td></tr>
				<% } %>
				<% (uploads || []).forEach(u => { %>
					<tr>
						<td><%= u.school_name %></td>
						<td>
							<a class="btn btn-sm" target="_blank" href="/<%= u.pdf_path %>">Fungua</a>
							<a class="btn btn-sm btn-secondary" download href="/<%= u.pdf_path %>">Pakua</a>
						</td>
						<td>
							<form method="post" action="/admin/batches/<%= batch.id %>/schools/<%= u.id %>/delete">
								<button class="btn btn-sm btn-danger" type="submit">Futa</button>
							</form>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</section> 