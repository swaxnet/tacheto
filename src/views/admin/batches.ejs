<section class="card">
	<div class="card-header">
		<h1>Makundi ya Matokeo</h1>
		<form class="inline" method="post" action="/admin/batches" enctype="multipart/form-data">
			<select name="form_level" required>
				<option value="Kidato cha Nne">Kidato cha Nne</option>
				<option value="Kidato cha Sita">Kidato cha Sita</option>
			</select>
			<input type="number" name="year" placeholder="Mwaka" required />
			<input type="text" name="title" placeholder="Kichwa" required />
			<input type="file" name="summaryPdf" accept="application/pdf" />
			<button class="btn" type="submit">Hifadhi</button>
		</form>
	</div>
	<div class="table-responsive">
		<table>
			<thead><tr><th>Kidato</th><th>Mwaka</th><th>Kichwa</th><th>PDF ya Jumla</th><th>Hatua</th></tr></thead>
			<tbody>
				<% if (!batches || batches.length === 0) { %>
					<tr><td colspan="5">Hakuna kundi la matokeo.</td></tr>
				<% } %>
				<% (batches || []).forEach(b => { %>
					<tr>
						<td><%= b.form_level %></td>
						<td><%= b.year %></td>
						<td><%= b.title %></td>
						<td><div class="actions">
							<% if (b.summary_pdf_path) { %>
								<a class="btn btn-sm" target="_blank" href="/<%= b.summary_pdf_path %>">Fungua Matokeo ya Jumla</a>
								<a class="btn btn-sm btn-secondary" download href="/<%= b.summary_pdf_path %>">Pakua Matokeo ya Jumla</a>
							<% } else { %>
								<span class="muted">Hakuna</span>
							<% } %>
						</div></td>
						<td class="nowrap"><div class="actions">
							<a class="btn btn-sm" href="/admin/batches/<%= b.id %>/schools">Shule</a>
							<form class="inline" method="post" action="/admin/batches/<%= b.id %>/delete">
								<button class="btn btn-sm btn-danger" type="submit">Futa</button>
							</form>
						</div></td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</section> 